{
  "noImplicitAny": true,
  "moduleResolution": "node",
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@svgs/*": ["assets/svgs/*"],
      "@common/*": ["common/*"],
      "@configs/*": ["configs/*"],
      "@constants/*": ["constants/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["components/lib/*"],
      "@ui/*": ["components/ui/*"],
      "@interfaces/*": ["interfaces/*"],
      "@redux/*": ["redux/*"],
      "@slice/*": ["redux/slice/*"],
      "@thunk/*": ["redux/thunk/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@yup/*": ["yup/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types",
      "declaration.d.ts",
      "src/*.ts",
      "src/*.tsx"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
